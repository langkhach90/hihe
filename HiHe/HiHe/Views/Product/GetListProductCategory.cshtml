@model List<Model.EF.Product>

@{
    ViewBag.Title = "GetListProductCategory";
    Layout = "~/Views/Shared/_myLayout.cshtml";
    var category = ViewBag.Category;
}

<h2>@category.Name</h2>
<div class="content_top">
    <div class="heading">
        <h3>Feature Products</h3>
    </div>
    <div class="sort">
        <p>
            Sort by:
            <select>
                <option>Lowest Price</option>
                <option>Highest Price</option>
                <option>Lowest Price</option>
                <option>Lowest Price</option>
                <option>Lowest Price</option>
                <option>In Stock</option>
            </select>
        </p>
    </div>
    <div class="show">
        <p>
            Show:
            <select>
                <option>4</option>
                <option>8</option>
                <option>12</option>
                <option>16</option>
                <option>20</option>
                <option>In Stock</option>
            </select>
        </p>
    </div>
    <div class="page-no">
        <p>
            Result Pages:<ul>
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li>[<a href="#"> Next>>></a>]</li>
            </ul>
        </p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var i in Model)
        {
            var url = "/chi-tiet/" + i.MetaTitle + "-" + i.ID;
        <div class="grid_1_of_4 images_1_of_4">
            <a href="@url"><img src="@i.Image" alt="" height="200" /></a>
            <h2>Lorem Ipsum is simply </h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>
            <p>@*<span class="strike">$528.22</span>*@<span class="price">@(i.Price.HasValue ? @i.Price.Value.ToString("N0") : "Liên hệ")</span></p>
            <div class="button"><span><img src="/Source/Client/images/cart.jpg" alt="" /><a href="@url" class="cart-button">Thêm vào giỏ hàng</a></span> </div>
            <div class="button"><span><a href="@url" class="details">Details</a></span></div>
        </div>
    }

</div>

